<div class="row-fluid">
  <div class="span4"><%= link_to article.title, article_path(article) %></div>
  <div class="span4 center">

    <% article.categories.each do |category| %>
      <button class="btn"><%= link_to category.name, category_path(category) %> </button>
    <% end %>

  </div>
  <div class="span4 center"><%= link_to article.user.name, user_path(article.user) %></div>
</div>
<hr>
